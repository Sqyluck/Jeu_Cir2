function update () {

    game.physics.arcade.collide(player, platforms);
    game.physics.arcade.collide(ia, platforms);

    player.body.velocity.x = 0;
    player.body.velocity.y = 0;

    if (cursors.left.isDown)
    {
        player.body.velocity.x = -250;
    }
    else if (cursors.right.isDown)
    {
        player.body.velocity.x = 250;
    }
    if (cursors.up.isDown)
    {
        player.body.velocity.y = -200;
    }
    else if (cursors.down.isDown)
    {
        player.body.velocity.y = 200;
    }
    

   if(kill.isDown){
        game.physics.arcade.overlap(player, ia, Kill, null, this);
   }
  //game.time.events.loop(Phaser.Timer.SECOND, iaRandomMove, this);
}

function Kill(){
    ia.kill();
    var testX = game.rnd.integerInRange(100, 600)
    var testY = game.rnd.integerInRange(110, 600)
    ia = game.add.sprite(testX, testY, 'player');
    game.physics.arcade.enable(ia);
}

function iaRandomMove() {

    //  A bouncey ball sprite just to visually see what's going on.
    var testX = game.rnd.integerInRange(-50, 50)
    var testY = game.rnd.integerInRange(-50, 50)
    player.body.velocity.x += testX;
    player.body.velocity.y += testY;


}
